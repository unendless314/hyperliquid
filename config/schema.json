{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "config_version",
    "environment",
    "db_path",
    "metrics_log_path",
    "app_log_path",
    "log_level"
  ],
  "properties": {
    "config_version": {
      "type": "string",
      "minLength": 1
    },
    "environment": {
      "type": "string",
      "enum": ["local", "staging", "production"]
    },
    "db_path": {
      "type": "string",
      "minLength": 1
    },
    "metrics_log_path": {
      "type": "string",
      "minLength": 1
    },
    "app_log_path": {
      "type": "string",
      "minLength": 1
    },
    "log_level": {
      "type": "string",
      "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"]
    }
  }
}
