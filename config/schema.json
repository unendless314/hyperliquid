{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "config_version",
    "environment",
    "db_path",
    "metrics_log_path",
    "app_log_path",
    "log_level"
  ],
  "properties": {
    "config_version": {
      "type": "string",
      "minLength": 1
    },
    "environment": {
      "type": "string",
      "enum": ["local", "staging", "production"]
    },
    "db_path": {
      "type": "string",
      "minLength": 1
    },
    "metrics_log_path": {
      "type": "string",
      "minLength": 1
    },
    "app_log_path": {
      "type": "string",
      "minLength": 1
    },
    "log_level": {
      "type": "string",
      "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"]
    },
    "ingest": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "maintenance_skip_gap": {
          "type": "boolean"
        },
        "backfill_window_ms": {
          "type": "integer",
          "minimum": 0
        },
        "cursor_overlap_ms": {
          "type": "integer",
          "minimum": 0
        },
        "hyperliquid": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "mode": {
              "type": "string",
              "enum": ["stub", "live"]
            },
            "target_wallet": {
              "type": "string"
            },
            "rest_url": {
              "type": "string"
            },
            "ws_url": {
              "type": "string"
            },
            "request_timeout_ms": {
              "type": "integer",
              "minimum": 1000
            },
            "symbol_map": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            "rate_limit": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "max_requests": {
                  "type": "integer",
                  "minimum": 0
                },
                "per_seconds": {
                  "type": "integer",
                  "minimum": 1
                },
                "cooldown_seconds": {
                  "type": "integer",
                  "minimum": 0
                }
              }
            },
            "retry": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "max_attempts": {
                  "type": "integer",
                  "minimum": 0
                },
                "base_delay_ms": {
                  "type": "integer",
                  "minimum": 0
                },
                "max_delay_ms": {
                  "type": "integer",
                  "minimum": 0
                },
                "jitter_ms": {
                  "type": "integer",
                  "minimum": 0
                }
              }
            },
            "stub_events": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "symbol",
                  "tx_hash",
                  "event_index",
                  "prev_target_net_position",
                  "next_target_net_position"
                ],
                "properties": {
                  "symbol": {
                    "type": "string",
                    "minLength": 1
                  },
                  "tx_hash": {
                    "type": "string",
                    "minLength": 1
                  },
                  "event_index": {
                    "type": "integer",
                    "minimum": 0
                  },
                  "prev_target_net_position": {
                    "type": "number"
                  },
                  "next_target_net_position": {
                    "type": "number"
                  },
                  "is_replay": {
                    "type": "integer",
                    "enum": [0, 1]
                  },
                  "timestamp_ms": {
                    "type": "integer",
                    "minimum": 0
                  },
                  "open_component": {
                    "type": "number"
                  },
                  "close_component": {
                    "type": "number"
                  }
                }
              }
            }
          }
        }
      }
    },
    "decision": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "max_stale_ms": {
          "type": "integer",
          "minimum": 0
        },
        "max_future_ms": {
          "type": "integer",
          "minimum": 0
        },
        "replay_policy": {
          "type": "string",
          "enum": ["close-only", "allow"]
        },
        "price_source": {
          "type": "string",
          "enum": ["adapter", "ingest"]
        },
        "price_fallback_enabled": {
          "type": "boolean"
        },
        "price_fallback_max_stale_ms": {
          "type": "integer",
          "minimum": 0
        },
        "filters_enabled": {
          "type": "boolean"
        },
        "blacklist_symbols": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "execution": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "tif_seconds": {
          "type": "integer",
          "minimum": 0
        },
        "order_poll_interval_sec": {
          "type": "integer",
          "minimum": 1
        },
        "retry_budget_max_attempts": {
          "type": "integer",
          "minimum": 0
        },
        "retry_budget_window_sec": {
          "type": "integer",
          "minimum": 0
        },
        "unknown_poll_interval_sec": {
          "type": "integer",
          "minimum": 1
        },
        "retry_budget_mode": {
          "type": "string",
          "enum": ["ARMED_SAFE", "HALT", "armed_safe", "halt"]
        },
        "market_fallback_enabled": {
          "type": "boolean"
        },
        "market_fallback_threshold_pct": {
          "type": "number",
          "minimum": 0
        },
        "market_slippage_cap_pct": {
          "type": "number",
          "minimum": 0
        },
        "binance": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "mode": {
              "type": "string",
              "enum": ["stub", "live"]
            },
            "base_url": {
              "type": "string"
            },
            "api_key": {
              "type": "string"
            },
            "api_secret": {
              "type": "string"
            },
            "request_timeout_ms": {
              "type": "integer",
              "minimum": 1000
            },
            "recv_window_ms": {
              "type": "integer",
              "minimum": 500
            },
            "exchange_info_enabled": {
              "type": "boolean"
            },
            "exchange_info_ttl_sec": {
              "type": "integer",
              "minimum": 0
            },
            "rate_limit": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "max_requests": {
                  "type": "integer",
                  "minimum": 0
                },
                "per_seconds": {
                  "type": "integer",
                  "minimum": 1
                },
                "cooldown_seconds": {
                  "type": "integer",
                  "minimum": 0
                }
              }
            },
            "retry": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "max_attempts": {
                  "type": "integer",
                  "minimum": 0
                },
                "base_delay_ms": {
                  "type": "integer",
                  "minimum": 0
                },
                "max_delay_ms": {
                  "type": "integer",
                  "minimum": 0
                },
                "jitter_ms": {
                  "type": "integer",
                  "minimum": 0
                }
              }
            }
          }
        }
      }
    },
    "safety": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "warn_threshold": {
          "type": "number",
          "minimum": 0
        },
        "critical_threshold": {
          "type": "number",
          "minimum": 0
        },
        "reconcile_interval_sec": {
          "type": "integer",
          "minimum": 1
        },
        "snapshot_max_stale_ms": {
          "type": "integer",
          "minimum": 0
        },
        "startup_policy": {
          "type": "string"
        }
      }
    }
  }
}
